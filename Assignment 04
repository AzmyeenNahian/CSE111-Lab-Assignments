//TASK 1

public class Toy {
  public String name;
  public int price;
  
  public Toy (String s , int n) {
    name=s;
    price =n;
    System.out.println("A new toy has been made!");
  }
  
  public void updatePrice (int n) {
    price =n;
  }
  
  public void showPrice(){
    System.out.println("price: "+ price+" Taka");
  }
  
  public void updateName (String s) {
    System.out.println("Chaning old name: "+name);
    name =s;
    System.out.println("new name: "+s);
  }
}

//TASK 2

public class Student {
  public int ID;
  public int count;
  public double cgpa;
  public boolean flag;
  public String courses="";
  
  public Student (int n) {
    ID =n;
    System.out.println("A student with ID "+ID+" has been created.");
  }
  
  public Student (int n , double d) {
    ID =n;
    cgpa = d;
    flag = true;
    System.out.println("A student with ID "+ID+" and cgpa "+cgpa+" has been created.");
  }
  
  public void addCourse (String s) {
    if (count==0) {
      courses="Added courses are "+"\n";
    }
    if (flag == false) {
      System.out.println("Failed to add "+s+"\n"+"Set CG first");
    } else if (cgpa <3) {
      if (count <3) {
        courses = courses + s +" ";
        count++;
      } else {
        System.out.println("Failed to add "+s);
        System.out.println("CG is low.Can't add more than 3 courses");
      }
    } else {
      if (count <4) {
        courses = courses + s + " ";
        count++;
      } else {
        System.out.println("Maximum 4 courses allowed.");
      }
    }
  }
  
  public void storeCG (double d) {
    cgpa =d;
    flag = true;
  }
  
  public void addCourse (String [] ss) {
    if (count==0) {
      courses="Added courses are "+"\n";
    }
     if (flag == false) {
      System.out.println("Failed to add "+ss[0]+"\n"+"Set CG first");
    } else if (cgpa <3) {
      for (int i = 0 ; i < ss.length ; i++) {
        if (count <3) {
        courses = courses + ss[i] +" ";
        count++;
        } else {
        System.out.println("Failed to add "+ss[i]);
        System.out.println("CG is low.Can't add more than 3 courses");
        }
      }
      
    } else {
      for (int i = 0 ; i < ss.length ; i++) {
        if (count <4) {
        courses = courses + ss[i] +" ";
        count++;
        } else {
        System.out.println("Failed to add "+ss[i]);
        System.out.println("Maximum 4 courses allowed.");
        }
      }
    }
  }
  
  public void removeAllCourse () {
    courses= "No courses added.";
    count =0;
  }
  
  public void showAdvisee() {
    System.out.println("Student ID: "+ID+", CGPA: "+cgpa+"\n"+courses);
  }
  
  public void storeID (int n) {
    ID =n;
    
  }
  
}




//TASK 3

public class Triangle {
  public int side1;
  public int side2;
  public int side3;
  public int peri;
  
  
  public Triangle (int x , int y , int z) {
    side1 =x;
    side2 = y;
    side3 = z;
    peri = x + y + z;
  }
  
  public String printTriangleType () {
    String s = "";
    if ( side1 == side2) {
      if (side2 ==side3) {
        s="This is an Equilateral Triangle.";
      } else {
        s="This is an Isoceles Triangle.";
      }
    } else if (side2 ==side3) {
      s="This is an Isoceles Triangle.";
    } else if (side1 ==side3) {
      s="This is an Isoceles Triangle.";
    } else {
      s="This is a Scalene Triangle.";
    }
    return s;
  }
  
  public void triangleDetails () {
    System.out.println("Three sides of the triangle are: "+side1+", "+side2+", "+side3+"\n"+"Perimeter: "+peri);
  }
  
  public void compareTriangles (Triangle o) {
    if (this == o) {
      System.out.println("These two triangle objects have the same address.");
    } else if ( this.side1 == o.side1 && this.side2==o.side2 && this.side3 == o.side3) {
      System.out.println("Addresses are different but the sides of the triangles are equal.");
    } else if (this.peri == o.peri) {
      System.out.println("Only the perimeter of both triangles is equal.");
    } else {
      System.out.println("Addresses, length of the sides and perimeter all are different.");
    }
  }
}



//TASK 4

public class Player {
  public String total;
  public String aa;
  public String mm;
  
  public Player (String s , int a , int m) {
     aa = ""+a;
     mm = ""+m;
    total = "Name: "+s+"\n"+"Age: "+aa+", Total Matches: "+mm;
  }

}

public class Team {
  public String name;
  public int counter;
  public String [] players = new String [2];
  
  
  public Team () {
    
  }
  
  public void updateName(String s) {
    name =s;
  }
  
  public Team (String s ) {
    name = s;
  }
  
  public void addPlayer (Player o) {
    players[counter] = o.total;
    counter++;
  }
  
  public void printDetail() {
    System.out.println("Team: " +name+"\n"+"List of players: ");
    for (int i = 0 ; i < counter ; i++) {
      System.out.println(players[i]);
    }
  }
}

