// TASK 1

public class Shelf {
  public int numb;
  public int capacity;
  
  public void showDetails () {
    System.out.println("Shelf capacity: " + capacity);
    System.out.println("Number of books: " + numb);
  }
  
  public void addBooks (int n) {
    if (capacity ==0) {
      System.out.println("Zero capacity. Cannot add books.");
    } else if (numb + n > capacity) {
      System.out.println("Exceeds capacity");
    } else {
      numb += n;
      System.out.println(n + " books added to shelf");
    }
  } 
}

// TASK 2

public class Cart {
  public int cartno;
  public String [] item = new String [3];
  public double [] price = new double [3];
  public int counter = 0;
  public int disc;
  
  public void create_cart (int n ) {
    cartno = n;
  }
  
  public void addItem (String s , double d) {
    if (counter <=2) {
    item[counter] = s;
    System.out.println(s + " added to cart " + cartno);
    price[counter] = d;
    counter++;
    System.out.println("You have "+ (counter) + " item(s) on your cart");
    } else {
      System.out.println("You already have 3 items on your cart");
    }
  }
  
  public void addItem (double dd , String ss) {
    if (counter <=2) {
    item[counter] = ss;
    System.out.println(ss + " added to cart " + cartno);
    price[counter] = dd;
    counter++;
    System.out.println("You have "+ (counter) + " item(s) on your cart");
    } else {
      System.out.println("You already have 3 items on your cart");
    }
  }
  
  public void cartDetails() {
    double sum = 0.00;
    System.out.println("Your cart(c"+cartno+") :");
      
    for (int i = 0 ; i <counter ; i ++) {
      System.out.println(item[i] +" - "+price[i]);
      sum += price[i];
    }
    System.out.println("Discount Applied: "+(double)disc+"%");
    if (disc == 0) {
    System.out.println("Total price: " + sum);
    } else {
    System.out.println("Total price: " + (sum - (sum*((double)disc/100.00))));
    }
  }
  
  public void giveDiscount (int n) {
    disc = n;
  }
}



// TASK 3

public class Reader {
  public String name = "New user";
  public int capacity;
  public String [] books;
  public int counter;
  
  public String createReader (String s , int n) {
    name = s;
    capacity = n;
    books = new String [n];
    String zz = "A new reader is created!";
    return zz;
  }
  
  public void addBook (String ss) {
    if (counter +1 > capacity) {
      System.out.println("No more capacity");
    } else {
    books[counter] = ss;
    counter++;
    }
  }
  
  public void readerInfo () {
    System.out.println("Name: "+name);
    System.out.println("Capacity: "+capacity);
    System.out.println("Books:");
    if ( counter == 0) {
      System.out.println("No books added yet");
    } else {
      for (int i = 0 ;  i< counter ; i++) {
        System.out.println("Book "+(i+1)+": " + books[i]);
      }
    }
   }
  
}


// TASK 4

public class MoneyTracker {
  public String name;
  public double balance;
  public double lastadd;
  public double lastspent;
  
  public void createTracker (String s) {
    name = s;
    balance = 1.0;
  }
  
  public void income (int n )  {
    System.out.println("Balance Updated!");
    balance += (double) n;
    lastadd = (double) n;
  }
  
  public void expense (int nn) {
    if (balance-((double) nn) == 0.0) {
      System.out.println("You're broke!");
      balance -= (double) nn;
      lastspent = (double) nn;
    } else if (balance == 0.0) {
      System.out.println("Not enough balance");
    } else {
      balance -= (double) nn;
      lastspent = (double) nn;
      System.out.println("Balance Updated.");
    }
  }
  
  public void showHistory() {
    System.out.println("Last added: "+lastadd);
    System.out.println("Last spent: "+lastspent);
  }
  
  public String info () {
    String zz = "Name: "+name + "\n" + "Current Balance: " + balance;
    return zz;
  }
}